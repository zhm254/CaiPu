.avatar-view {
  margin: 100rpx 0 40rpx;
  display: flex;
  justify-content: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.nickname {
  text-align: center;
}

.publish-icon, .collection-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 40rpx;
}

.arrowRight-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.my-publish {
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  line-height: 100rpx;
  justify-content: space-between;
  padding: 0 20rpx;
  margin: 80rpx 0;
}

.my-collection {
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  line-height: 100rpx;
  justify-content: space-between;
  padding: 0 20rpx;
}

.my-publish-left, .my-collection-left {
  display: flex;
  align-items: center;
}
